{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/controllers/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/services/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/routes/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/controllers/(.*)",
      "dest": "/src/controllers/$1"
    },
    {
      "src": "/services/(.*)",
      "dest": "/src/services/$1"
    },
    {
     "src": "/routes/(.*)",
      "dest": "/src/routes/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.ts"
    }
  ]
}

  