{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ES6",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
     "esModuleInterop": true,
      "skipLibCheck": true,
      "allowImportingTsExtensions":true
    },
    "ts-node": {
        "esm": true, 
      },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  