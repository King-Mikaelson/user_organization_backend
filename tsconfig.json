{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ES2020",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
     "esModuleInterop": true,
      "skipLibCheck": true,
      "allowImportingTsExtensions":true
      
    },
    "ts-node": {
        "esm": true, 
      },
    // "include": ["src/**/*"],
    "include": [
    "src/index.ts", // Main entry point
    "src/controllers/**/*.ts", // Controllers folder
    "src/services/**/*.ts", // Services folder
    "src/routes/**/*.ts", // Routes folder
    "tests"
  ],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  