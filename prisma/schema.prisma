// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId        String              @id @default(uuid()) @unique
  email         String              @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  organisations UserOrganisations[]
}

model Organisation {
  orgId       String              @id @default(uuid()) @unique
  name        String 
  description String?
  users       UserOrganisations[]
}

model UserOrganisations {
  authorId       String
  organisationId String

  user         User         @relation(fields: [authorId], references: [userId])
  organisation Organisation @relation(fields: [organisationId], references: [orgId])

  @@id([authorId, organisationId])
  @@index([organisationId], name: "organisation_idx")
}
